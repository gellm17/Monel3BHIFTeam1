<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="788.0" prefWidth="1170.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainWindow_Controller">
   <top>
      <BorderPane prefHeight="90.0" prefWidth="1170.0" style="-fx-background-color: red;" BorderPane.alignment="CENTER">
         <right>
            <ButtonBar prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="btnInfo" mnemonicParsing="false" onAction="#btnInfo_Clicked" prefHeight="55.0" prefWidth="55.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resources/icon_Info.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="btnSettings" mnemonicParsing="false" onAction="#btnSettings_Clicked" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resources/icon_Einst.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
              </buttons>
            </ButtonBar>
         </right>
         <left>
            <ImageView fx:id="imageLogo" fitHeight="80.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../../resources/logo_Monel.png" />
               </image>
            </ImageView>
         </left>
         <padding>
            <Insets bottom="5.0" left="5.0" right="20.0" top="5.0" />
         </padding>
         <center>
            <Label fx:id="lbTitle" text="Klienten" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Gill Sans MT" size="36.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </top>
   <center>
      <TabPane fx:id="tabPaneClients" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" tabMinHeight="70.0" tabMinWidth="70.0" BorderPane.alignment="CENTER">
        <tabs>
            <Tab fx:id="tabActivities" text="Aktivitäten">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
          <Tab fx:id="tabBills" text="Rechnungen">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="tabClients" text="Klienten">
              <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TableView fx:id="tableClients" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <columns>
                            <TableColumn prefWidth="150.0" text="Bild" />
                            <TableColumn prefWidth="250.0" text="Vorname" />
                              <TableColumn prefWidth="250.0" text="Nachname" />
                              <TableColumn prefWidth="100.0" text="SvNr" />
                              <TableColumn prefWidth="200.0" text="Telefon" />
                          </columns>
                           <BorderPane.margin>
                              <Insets top="20.0" />
                           </BorderPane.margin>
                        </TableView>
                     </center>
                     <top>
                        <BorderPane BorderPane.alignment="CENTER">
                           <center>
                              <TextField fx:id="tfSearchClients" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="769.0" BorderPane.alignment="CENTER" />
                           </center>
                           <right>
                              <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                <buttons>
                                    <Button fx:id="btnSearchClients" maxWidth="80.0" mnemonicParsing="false" onAction="#btnSearchClients_Clicked" text="Search" />
                                    <Button fx:id="btnFilterClients" maxWidth="80.0" mnemonicParsing="false" onAction="#btnFilterClients_Clicked" text="Filter" />
                                  <Button fx:id="btnAddClient" maxWidth="80.0" mnemonicParsing="false" onAction="#btnAddClient_Clicked" text="+" />
                                    <Button fx:id="btnDeleteClient" mnemonicParsing="false" onAction="#btnDeleteClient_Clicked" text="Löschen" />
                                    <Button fx:id="btnEditClient" mnemonicParsing="false" onAction="#btnEditClient_Clicked" text="Bearbeiten" />
                                </buttons>
                                 <BorderPane.margin>
                                    <Insets />
                                 </BorderPane.margin>
                              </ButtonBar>
                           </right>
                        </BorderPane>
                     </top>
                     <padding>
                        <Insets bottom="30.0" left="50.0" right="30.0" top="20.0" />
                     </padding>
                  </BorderPane>
              </content>
            </Tab>
            <Tab fx:id="tabEmployees" text="Mitarbeiter">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="tabSponsors" text="Sponsoren">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="tabPhotos" text="Fotos">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="tabBirthdays" text="Geburtstage">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TabPane>
   </center>
</BorderPane>
